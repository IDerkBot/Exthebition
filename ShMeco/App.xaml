<Application
    x:Class="Exhibition.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Startup="App_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resource/Themes/OldTheme.xaml" />
                <ResourceDictionary Source="Resource/Themes/NewTheme.xaml" />
                <ResourceDictionary Source="Resource/Icons/Icons.xaml" />
                <ResourceDictionary Source="pack://application:,,,/ArionControlLibrary;component/lighttheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
